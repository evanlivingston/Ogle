{
  "name": "Ogle",
  "version": "1.0",
  "description": "Violatin' your privacy.",
  "permissions": 
    [
          "webRequest"
        , "webRequestBlocking"
        , "storage"
        , "tabs"
        , "https://*/*"
        , "http://*/*"
        , "<all_urls>"
    ],
  "options_page" : "options.html",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*" ],
      "js": ["inject.js"],
      "run_at" : "document_end"
    }
  ],
  "icons" : {
    "128" : "images/icon_128.png"
  },
  "browser_action": {
     "default_icon": "images/icon_128.png",
     "default_popup": "popup.html"
 },


  "manifest_version": 2
}
