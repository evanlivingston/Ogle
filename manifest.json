{
  "name": "ImageWatcher",
  "version": "1.0",
  "description": "I can't has cheezburger!",
  "permissions": 
    [
          "webRequest"
        , "webRequestBlocking"
        , "storage"
        , "tabs"
        , "<all_urls>"
    ],
  "background": {
    "scripts": ["background.js"]
  },
  "options_page" : "options.html",
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["inject.js"],
      "run_at" : "document_end"
    }
  ],


  "manifest_version": 2
}
